<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_update_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/appupdate_img"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/update_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_update_logo"
        app:layout_constraintRight_toRightOf="@id/iv_update_logo"
        app:layout_constraintTop_toBottomOf="@id/iv_update_logo"
        android:background="@drawable/common_bottom_radius10_white">
        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_30"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="@dimen/font_16"
            android:text="新版本"
            />
        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_update_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_update_title"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_14"
            android:text="更新内容"
            />

        <TextView
            android:id="@+id/btn_update_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_radius22_00d5b8_solid"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:text="@string/common_update_now"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/btn_update_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/update_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/appupdate_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>