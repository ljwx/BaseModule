<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/dp_12"
    android:background="@drawable/common_bottom_radius40_white">

    <TextView
        android:id="@+id/tv_day_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_date"
        app:layout_constraintBottom_toBottomOf="@id/ll_date"
        android:text="@string/common_the_day_before"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_666"
        android:drawableLeft="@mipmap/common_btn_back_left"
        android:drawablePadding="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_16"/>

    <View
        android:id="@+id/view_placeholder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_18"
        android:textSize="@dimen/font_22"
        android:paddingTop="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_7"
        android:textStyle="bold"
        android:text="@string/dailybs_daily_bs"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view_placeholder"/>

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:background="@drawable/bg_radius22_00d5b8_solid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/font_14"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            tools:text="Fri"/>

        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="01-20"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_dailybs_calendar_white"
            android:layout_marginLeft="@dimen/dp_16"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_day_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_date"
        app:layout_constraintBottom_toBottomOf="@id/ll_date"
        android:text="@string/common_the_next_day"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_666"
        android:drawableRight="@mipmap/common_btn_back_right"
        android:drawablePadding="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_16"/>


    <TextView
        android:id="@+id/tv_month_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date2"
        app:layout_constraintBottom_toBottomOf="@id/tv_date2"
        tools:text="12"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_666"
        android:paddingLeft="@dimen/dp_20" />

    <TextView
        android:id="@+id/tv_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2021-01"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ll_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_9"/>

    <TextView
        android:id="@+id/tv_month_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_date2"
        app:layout_constraintBottom_toBottomOf="@id/tv_date2"
        tools:text="1"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_666"
        android:paddingRight="@dimen/dp_20" />

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_date2"
        android:layout_marginTop="@dimen/dp_9"
        app:month_view="com.sisensing.common.view.BsDataMonthView"
        app:selected_theme_color="@color/color_00D5B8"
        app:selected_text_color="@color/white"
        app:current_day_text_color="@color/black"
        app:week_start_with="mon"
        app:month_view_show_mode="mode_only_current"/>

</androidx.constraintlayout.widget.ConstraintLayout>