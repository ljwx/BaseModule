<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_round10_white"
            android:paddingHorizontal="@dimen/dp_15">

            <TextView
                android:id="@+id/base_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_15"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/personalcenter_email_report"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/base_dialog_content_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_5"
                android:textColor="@color/textPrimary_132032"
                android:textSize="@dimen/font_14"
                app:layout_constraintHeight_min="@dimen/dp_60"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/base_dialog_title"
                app:layout_goneMarginTop="@dimen/dp_30"
                tools:text="sdfsdojfoasdijfoasdjfoasdfjoj" />

            <Button
                android:id="@+id/base_dialog_negative"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_7"
                android:background="@drawable/selector_button_grey_r10"
                android:elevation="0dp"
                android:text="@string/common_cancel"
                android:textAllCaps="false"
                android:textColor="#9AA5B0"
                android:textSize="@dimen/font_16"
                app:layout_constraintBaseline_toBaselineOf="@id/base_dialog_positive"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/base_dialog_positive"
                tools:visibility="gone" />

            <Button
                android:id="@+id/base_dialog_positive"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/selector_button_theme_r10"
                android:text="@string/personalcenter_ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/base_dialog_negative"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/base_dialog_content_string"
                app:layout_goneMarginLeft="@dimen/dp_0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
