<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.sisensing.common.utils.CheckInUtils" />

        <variable
            name="item"
            type="com.sisensing.common.entity.personalcenter.LifeEventEntity.RecordsDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_divider_bottom_line"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text='@{item.createTimeDisplay}'
            android:textColor="@color/textSecondary_666f77"
            android:textSize="@dimen/font_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="09:30" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src='@{CheckInUtils.getIcon(item.type)}'
            app:layout_constraintLeft_toLeftOf="@id/time"
            app:layout_constraintTop_toBottomOf="@id/time"
            tools:src="@mipmap/icon_event_sport" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_12"
            android:text='@{item.typeDisplay}'
            android:textColor="@color/textPrimary_132032"
            android:textSize="@dimen/font_17"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/time"
            tools:text="Medicine" />

        <ImageView
            android:layout_marginTop="@dimen/dp_2"
            android:id="@+id/icon_duration"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility='@{item.showSportIcon()?View.VISIBLE:View.GONE}'
            android:src="@mipmap/personalcenter_duration"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{item.getShowDetail()}'
            android:textColor="@color/textSecondary_666f77"
            android:textSize="@dimen/font_15"
            app:layout_constraintLeft_toRightOf="@id/icon_duration"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="09:30" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toLeftOf="@id/edit"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_goneMarginTop="@dimen/dp_5"
            tools:itemCount="1"
            tools:listitem="@layout/item_image_radiu" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/edit_black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
